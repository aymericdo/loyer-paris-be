{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "lib": ["es2019", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@helpers/*": ["helpers/*"],
      "@interfaces/*": ["interfaces/*"],
      "@db/*": ["db/*"],
      "@websites/*": ["websites/*"],
      "@cronjobs/*": ["cronjobs/*"],
      "@slack-service/*": ["slack-service/*"]
    },
    "allowJs": true,
    "outDir": "./build",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
