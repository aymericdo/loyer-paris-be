{
  "compilerOptions": {
    "target": "ES2022",
    "downlevelIteration": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "lib": ["es2019", "dom", "dom.iterable"],
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@cronjobs/*": ["cronjobs/*"],
      "@db/*": ["db/*"],
      "@interfaces/*": ["interfaces/*"],
      "@messenger/*": ["messenger/*"],
      "@services/*": ["services/*"]
    },
    "allowJs": true,
    "outDir": "./build",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
